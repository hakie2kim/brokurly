    <!-- CREATE -->
    <select id="selectFAQList" resultType="FAQListDto">
        SELECT b.bno, c.name category, title
        FROM FAQ_BOARD b, FAQ_CATEGORY_CODE c
        WHERE b.cate_code = c.code
        ORDER BY bno DESC
    </select>

    <sql id="selectfFromNoticeBoard">
        SELECT *
        FROM notice_board
    </sql>

    <select id="selectBoardDetail" resultType="NoticeBoardDto">
        SELECT title, admin_id, content, reg_dt
        FROM notice_board
        WHERE bno = #{bno}
    </select>

