    <!-- DELETE -->
    <!--고객 아이디랑 아이탬아이디 같을때만 삭제되게 -->
    <delete id="delete">
        DELETE FROM wishlist
        WHERE item_id = #{itemId}
        AND cust_id = #{custId}
