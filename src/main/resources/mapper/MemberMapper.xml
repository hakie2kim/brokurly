<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.brokurly.repository.MemberDao">
    <!-- CREATE -->
<!--     useGeneratedKeys="true" keyProperty="bno"-->
    <insert id="insert">
        INSERT INTO customer
            (cust_id, pwd, name, email, tel_no, sex,
             birth_dt, reg_dt,consent)
        VALUES
            (#{custId}, #{pwd}, #{name}, #{email}, #{telNo}, 'N',
             #{birthDt}, now(),'01')
    </insert>

    <!-- READ -->
    <sql id="select">
        SELECT cust_id,
               pwd,
               name,
               email,
               tel_no,
               sex,
               birth_dt,
               reg_dt,
               adult_verif_dt,
               cart_cnt,
               point,
               consent,
               act_stat,
               grade
        FROM customer
    </sql>
    <!-- KAKAO LOGIN-->
    <select id="selectSnsMember" resultType="Member">
        SELECT cust_id, name, email, tel_no
        FROM customer
        WHERE sns_id = #{snsId}
    </select>

    <insert id="insertSnsMember">
        INSERT INTO customer
        (cust_id, pwd, name, email, sns_id)
        VALUES
            (#{custId}, #{pwd}, #{name}, #{email}, #{snsId})
    </insert>

    <!-- COUNT -->
    <sql id="count">
        SELECT COUNT(*) FROM customer
    </sql>

    <select id="countMemberAll" resultType="int">
        <include refid="count"/>
    </select>

    <select id="countMember" resultType="int">
        <include refid="count" />
            WHERE cust_id = #{custId}
    </select>

    <select id="countEmail" resultType="int">
        <include refid="count"/>
            WHERE email = #{email}
    </select>

    <!-- DELETE -->
    <delete id="deleteMemberAll">
        DELETE FROM customer
    </delete>

    <delete id="deleteMember">
        DELETE FROM customer
        WHERE cust_id = #{custId}
    </delete>
</mapper>