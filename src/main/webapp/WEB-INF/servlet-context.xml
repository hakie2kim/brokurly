    <!--                <mvc:mapping path="/member/signup"/>-->
    <!--&lt;!&ndash;                <mvc:mapping path="/member/logout"/> mapping path 추가 &ndash;&gt;-->
    <!--                <bean class="com.brokurly.interceptor.LoginCheckInterceptor"></bean>-->
    <!--            </mvc:interceptor>-->
    <!--        </mvc:interceptors>-->


    <mvc:annotation-driven/>

    <mvc:resources mapping="/resources/**" location="/resources/"/>
    <mvc:resources mapping="/include/**" location="WEB-INF/views/include/" />

    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/views/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

    <context:component-scan base-package="com.brokurly"/>


    <!--  이미지 업로드 관련  -->
    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <!-- 최대 업로드 크기 설정 -->
        <property name="maxUploadSize" value="10000000"/>
    </bean>
</beans>

